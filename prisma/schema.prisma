generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model name_basics {
  id          String   @id @map("_id")
  birth       Int
  death       Int
  fullName    String
  professions String[]

  @@map("name.basics")
}

model title_akas {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  ordering        Int
  region          String
  titleId         String

  @@map("title.akas")
}

model title_basics {
  id        String   @id @map("_id")
  endYear   Int
  genres    String[]
  isAdult   Float
  name      String
  nameEng   String
  rating    Float
  runtime   Int
  startYear Int
  titleType String
  votes     Float

  @@map("title.basics")
}

model title_crew {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  directors String[]
  titleId   String
  writers   String[]

  @@map("title.crew")
}

model title_episodes {
  id        String   @id @map("_id")
  endYear   Int
  episode   Int
  genres    String[]
  isAdult   Float
  name      String
  nameEng   String
  rating    Float
  runtime   Int
  season    Int
  startYear Int
  titleId   String
  votes     Float

  @@map("title.episodes")
}

model title_principals {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  characters String[]
  job        String
  ordering   Int
  personId   String
  titleId    String

  @@map("title.principals")
}
